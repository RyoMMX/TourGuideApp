<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBackground"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:id="@+id/historical_image"
                tools:src="@drawable/ic_account_balance_black_24dp"
                style="@style/card_large_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <ImageView
                    style="@style/cardSmallImage"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:id="@+id/map_text_view"
                    style="@style/card_text"
                    tools:text="2-3-2 Asakusa, Taito 111-0032, Tokyo Prefecture" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <ImageView
                    style="@style/cardSmallImage"
                    android:src="@drawable/ic_map_black_24dp" />

                <TextView
                    android:id="@+id/location_text_view"
                    style="@style/card_text"
                    tools:text="Ueno, Asakusa" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>